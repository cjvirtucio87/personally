<% if @data %>
  <%= form_tag businesses_path, action: :create, method: :post do %>
    <% @data.each do |data| %>
      <%= radio_button_tag(:business, data) %>
      <% hidden_field_tag :query_result, data %>
      <%= link_to "See result" %><br>
    <% end %>
    <%= submit_tag "Submit" %>
  <% end %>
<% else %>
<%= form_for @business do |business_fields| %>
  <%= business_fields.label :ownership_name %><br>
  <%= business_fields.text_field :ownership_name %><br>
  <%= business_fields.label :dba_name %><br>
  <%= business_fields.text_field :dba_name %><br>
  <%= business_fields.label :full_business_address %><br>
  <%= business_fields.text_field :full_business_address %><br>
  <%= business_fields.label :city %><br>
  <%= business_fields.text_field :city %><br>
  <%= business_fields.label :state %><br>
  <%= business_fields.text_field :state %><br>
  <%= business_fields.label :business_zip %><br>
  <%= business_fields.text_field :business_zip %><br>
  <%= business_fields.label :mailing_address_1 %><br>
  <%= business_fields.text_field :mailing_address_1 %><br>
  <%= business_fields.label :mailing_city_state_zip_code %><br>
  <%= business_fields.text_field :mailing_city_state_zip_code %><br>
  <%= business_fields.submit "Submit" %><br>
<% end %>

<% end %>